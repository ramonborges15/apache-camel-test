<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console target="SYSTEM_OUT" name="Console">
            <PatternLayout pattern="%level %d{HH:mm:ss.SSS} - %msg%n"/>
        </Console>
    </Appenders>
		
    <Loggers>
        <Logger name="com.estudo.apache.camel.app" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
			
        <Logger name="org.apache.camel" level="warn">
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>